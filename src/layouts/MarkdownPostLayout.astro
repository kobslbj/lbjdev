---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <article class="prose prose-invert mx-auto my-20">
    <div>
      <p class="font-bold text-3xl mt-[3rem] mb-[1rem]">{frontmatter.title}</p>
      <p class="text-gray-300 mb-[1rem]">
        {new Date(frontmatter.pubDate).toDateString().split(' ').slice(1, 3).join(' ') + ' ' + new Date(frontmatter.pubDate).getFullYear()}
      </p>
      <div class="flex gap-3">
        {frontmatter.tags.map((tag) => (
          <p class="p-3 border border-[#4A4A4A] rounded-lg hover:bg-[#464544] transition duration-300">
            <a href={`/tags/${tag}`}># {tag}</a>
          </p>
        ))}
      </div>
      <hr class="my-4 border-t border-gray-400" />
      <slot />
    </div>
  </article>
  <!-- Giscus Comments -->
  <div id="comments">
    <script src="https://giscus.app/client.js"
            data-repo="kobslbj/lbjdev"
            data-repo-id="R_kgDOL6zDZA"
            data-category="Announcements"
            data-category-id="DIC_kwDOL6zDZM4CgTvt"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="top"
            data-theme="noborder_dark"
            data-lang="en"
            data-loading="lazy"
            crossorigin="anonymous"
            async>
    </script>
  </div>
</BaseLayout>
