---
const { imageSrc, imageAlt, title, description, githubLink, demoLink } = Astro.props;
import { Image } from 'astro:assets';
---

<div>
  <div class="max-w-7xl mx-auto py-10  lg:py-15  lg:flex lg:items-center lg:justify-between">
    <div class="lg:w-0 lg:flex-1">
      <h2 class="text-2xl text-gray-100 sm:text-3xl">
        {title}
      </h2>
      <p class="mt-3 max-w-3xl text-lg leading-6 text-[#757575]">
        {description}
      </p>
      <div class="mt-8 sm:flex">
        {githubLink && (
          <div class="rounded-md shadow">
            <a href={githubLink} target="_blank" rel="noopener noreferrer" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-[#4A4A4A] hover:bg-[#007B83] md:py-4 md:text-lg md:px-10">
              GitHub
            </a>
          </div>
        )}
        {demoLink && (
          <div class="mt-3 sm:mt-0 sm:ml-3">
            <a href={demoLink} target="_blank" rel="noopener noreferrer" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-[#4A4A4A] hover:bg-[#007B83] md:py-4 md:text-lg md:px-10">
              Demo
            </a>
          </div>
        )}
      </div>
    </div>
    <div class="mt-10 lg:mt-0 lg:ml-10 lg:flex-shrink-0 lg:flex lg:items-center lg:justify-center">
      <Image class="h-64 w-full md:w-[20rem] rounded-lg object-cover object-center" src={imageSrc} alt={imageAlt} />
    </div>
  </div>
</div>
