---
interface Props {
  url: string;
  title: string;
}
const { url, title} = Astro.props;
---

<div class="p-4 mb-4 border border-[#4A4A4A] rounded-lg hover:bg-[#464544] transition duration-300">
  <h2 class="text-2xl font-semibold">
    <a href={url} class="text-gray-300 hover:underline">{title}</a>
  </h2>
</div>
