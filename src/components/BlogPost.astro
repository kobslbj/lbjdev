---
interface Props {
  url: string;
  title: string;
}
const { url, title } = Astro.props;
---

<article>
  <h2><a href={url}>{title}</a></h2>
</article>

<style>
  article {
    margin-bottom: 1.5rem;
  }
  h2 {
    font-size: 1.5rem;
    margin: 0;
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
