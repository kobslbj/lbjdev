---
interface Props {
  url: string;
  title: string;
}
const { url, title} = Astro.props;
---

<div class="p-4 mb-4 border border-[#2A2D32] rounded-lg hover:bg-[#1C2128] hover:border-[#58A6FF] transition duration-300">
  <h2 class="text-2xl font-semibold">
    <a href={url} class="text-[#E6EDF3] hover:text-[#58A6FF] hover:underline">{title}</a>
  </h2>
</div>
